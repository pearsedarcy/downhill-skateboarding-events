# Example environment configuration
# Copy this file to .env and modify as needed

# Development mode
DEBUG=True
DJANGO_DEVELOPMENT=True

# Secret key (generate a new one for production)
SECRET_KEY=your-secret-key-here

# Database URLs
# Leave DATABASE_URL empty for SQLite or set for specific DB
# DATABASE_URL=
DEV_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/downhill_dev
PROD_DATABASE_URL=postgresql://user:password@host:port/dbname

# Allowed hosts
ALLOWED_HOSTS=127.0.0.1,localhost

# Cloudinary configuration (for media storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key  
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_URL=cloudinary://api-key:api-secret@cloud-name

# Django settings module
DJANGO_SETTINGS_MODULE=downhill_skateboarding_events.settings_local

# Google Maps API key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# CSRF trusted origins
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
